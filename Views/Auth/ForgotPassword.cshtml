@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password - INTI Virtual Hub</title>
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
        .input-style {
            width: 100%;
            padding: 10px 8px;
            margin-bottom: 24px;
            border: none;
            border-bottom: 1px solid #ccc;
            font-size: 1rem;
            background: transparent;
            outline: none;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-left">
            <img src="/uploads/INTIHUBLOGO.png" alt="INTI 360 Logo" class="login-logo" />
        </div>
        <div class="login-right">
            <h1>Forgot Password</h1>
            <p class="welcome">Enter your email address and we'll send you a link to reset your password.</p>
            <form method="post" id="forgotPasswordForm">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" required autocomplete="username" class="input-style" />
                <button type="submit" class="login-btn">Send Reset Link</button>
            </form>
            <div class="signup-row">
                Remember your password? <a href="/Auth/Login">Log in</a>
            </div>
        </div>
    </div>
    <script>
        document.getElementById('forgotPasswordForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const email = document.getElementById('email').value;

            const res = await fetch('/Auth/ForgotPassword', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',  //  tell server it's JSON
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({ email })          //  send JSON body
            });

            const result = await res.json();
            if (result.success) {
                alert(result.message);
                window.location.href = '/Auth/Login';
            } else {
                let errorMessage = result.message;
                if (errorMessage.includes("EMAIL_NOT_FOUND")) {
                    errorMessage = "Email not found. Please check your email or sign up.";
                } else if (errorMessage.includes("INVALID_EMAIL")) {
                    errorMessage = "Invalid email format. Please enter a valid email.";
                }
                alert(errorMessage);
            }
        });
    </script>

</body>
</html> 
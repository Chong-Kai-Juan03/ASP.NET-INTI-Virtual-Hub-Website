<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="~/favicon.ico">
    <title>@ViewData["Title"] - INTI Virtual Hub</title>
    <link rel="stylesheet" href="/css/dashboard.css" />
    <link rel="stylesheet" href="/css/manage-account.css" />
    <link rel="stylesheet" href="/css/Manage360Pg.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
</head>
<body class="dashboard-root">

    <header class="main-header">
        <div class="header-left">
            <img src="/uploads/INTIHUBLOGO.png" alt="INTI 360 Logo" class="header-logo" />
            <span class="main-title">INTI Virtual Hub</span>
        </div>

        <button class="logout-btn">Logout</button>
    </header>

    <aside class="sidebar">
        <nav class="sidebar-nav">

            <a href="/Home/Index">
                <i class="bi bi-speedometer2  fs-4 me-2" aria-hidden="true"></i>
                Overview
            </a>

            <a href="/Scene/Manage360">
                <i class="bi bi-images  fs-4 me-2" aria-hidden="true"></i>
                Manage 360 Pictures
            </a>

            @if (Context.Session.GetString("Role") == "Admin")
            {
                <a href="/Home/ManageAccount">
                    <i class="bi bi-person-gear  fs-4 me-2" aria-hidden="true"></i>
                    Manage Account
                </a>
            }

            <a href="/Home/Performance">
                <i class="bi bi-graph-up-arrow  fs-4 me-2" aria-hidden="true"></i>
                Performance
            </a>

            <a href="/Home/Setting">
                <i class="bi bi bi-gear fs-4 me-2" aria-hidden="true"></i>
                Settings
            </a>
        </nav>
    </aside>
    <main class="main-content">
        <section class="dashboard-section">
            @RenderSection("Content", required: true)
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.querySelector('.logout-btn')?.addEventListener('click', function () {
            sessionStorage.clear();
            window.location.href = '/Auth/Logout';
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>